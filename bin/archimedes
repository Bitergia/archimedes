import argparse
import logging
from operator import xor
import sys

from archimedes.backend import Archimedes
from archimedes._version import __version__

# Logging formats
ARCHIMEDES_LOG_FORMAT = "[%(asctime)s] - %(message)s"
ARCHIMEDES_DEBUG_LOG_FORMAT = "[%(asctime)s - %(name)s - %(levelname)s] - %(message)s"
ARCHIMEDES_USAGE_MSG = "usage: archimedes [options]"
ARCHIMEDES_DESC_MSG = "Import and export Kibana dashboards, visualizations, searches and index patterns"
ARCHIMEDES_VERSION_MSG = \
"""%(prog)s """  + __version__


FOLDER_PATH = './'


def config_logging(debug):
    """Config logging level output output"""

    if debug:
        logging.basicConfig(level=logging.DEBUG, format=ARCHIMEDES_DEBUG_LOG_FORMAT)
        logging.debug("Debug mode activated")
    else:
        logging.basicConfig(level=logging.INFO, format=ARCHIMEDES_LOG_FORMAT)


def get_params_parser():
    """Parse command line arguments"""

    parser = argparse.ArgumentParser(usage=ARCHIMEDES_USAGE_MSG,
                                     description=ARCHIMEDES_DESC_MSG,
                                     add_help=False)

    parser.add_argument('-g', '--debug', dest='debug',
                        action='store_true',
                        help=argparse.SUPPRESS)
    parser.add_argument('-h', '--help', action='help',
                        help=argparse.SUPPRESS)
    parser.add_argument('-v', '--version', action='version',
                        version=ARCHIMEDES_VERSION_MSG,
                        help=argparse.SUPPRESS)

    parser.add_argument('url', help='Kibana URL')
    parser.add_argument('--force', dest='force', action='store_true', help='Force overwrite')
    parser.add_argument('--json-path', dest='json_path', help='Path of the JSON file to import')

    group_import_objects = parser.add_argument_group('Import objects')
    group_import_objects.add_argument('--no-dashboards', dest='exclude_dashboards', action='store_true', help='Do not import dashboard objects')
    group_import_objects.add_argument('--no-index-patterns', dest='exclude_index_patterns', action='store_true', help='Do not import index pattern objects')
    group_import_objects.add_argument('--no-visualizations', dest='exclude_visualizations', action='store_true', help='Do not import visualization objects')
    group_import_objects.add_argument('--no-searches', dest='exclude_searches', action='store_true', help='Do not import searches objects')

    group_import_dashboard = parser.add_argument_group("Import dashboard")
    group_import_dashboard.add_argument('--visualizations-folder', dest='visualizations_folder', help='Folder where visualization objects are stored')
    group_import_dashboard.add_argument('--searches-folder', dest='searches_folder', help='Folder where search objects are stored')
    group_import_dashboard.add_argument('--index-patterns-folder', dest='index_patterns_folder', help='Folder where index pattern objects are stored')

    group_export = parser.add_argument_group('Export dashboard')
    group_export.add_argument('--dashboard-id', dest='dashboard_id', help='ID of the dashboard to export')
    group_export.add_argument('--dashboard-title', dest='dashboard_title', help='Title of the dashboard to export')
    group_export.add_argument('--folder-path', dest='folder_path', default=FOLDER_PATH, help='Folder where to export the dashboard objects')
    group_export.add_argument('--one-file', dest='one_file', action='store_true', help='Export the dashboard objects to a file')

    exclusive = parser.add_mutually_exclusive_group(required=True)
    exclusive.add_argument('--import-objects', dest='import_objects', action='store_true',
                           help='Import Kibana objects from a JSON file')
    exclusive.add_argument('--import-dashboard', dest='import_dashboard', action='store_true',
                           help='Import a dashboard from a JSON file and the related visualizations, searches and index patterns located in different folders')
    exclusive.add_argument('--export-dashboard', dest='export', action='store_true', help='Export dashboard from Kibana')

    if len(sys.argv) == 1:
        parser.print_help()
        sys.exit(1)

    return parser


def get_params():
    """Get params to execute Archimedes"""

    parser = get_params_parser()
    args = parser.parse_args()

    error = 0

    if not args.url:
        logging.error("Missing Kibana URL")
        error = 1

    if (args.import_objects or args.import_dashboard) and args.export:
        logging.error("Archimedes requires --import-objects, --import-dashboard or --export")
        error = 1

    if args.import_objects and args.import_dashboard:
        logging.error("Import requires --import-objects or --import-dashboard")
        error = 1

    if args.import_objects or args.import_dashboard:
        if not args.json_path:
            logging.error("Import requires --json-path")
            error = 1

    elif args.export:
        if not xor(bool(args.dashboard_id), bool(args.dashboard_title)):
            logging.error("Export requires --dashboard-id or --dashboard-title")
            error = 1

    if error:
        parser.print_help()
        sys.exit(1)

    return args


def main():
    args = get_params()
    config_logging(args.debug)
    logging.info("Archimedes will start soon.")

    archimedes = Archimedes(args.url)

    if args.import_objects:
        archimedes.import_objects_from_file(args.json_path, args.exclude_dashboards, args.exclude_index_patterns,
                                            args.exclude_visualizations, args.exclude_searches, args.force)
    elif args.import_dashboard:
        archimedes.import_dashboard(args.json_path, args.visualizations_folder, args.searches_folder,
                                    args.index_patterns_folder, args.force)
    elif args.export and args.dashboard_id:
        archimedes.export_dashboard_by_id(args.dashboard_id, args.folder_path, args.one_file, args.force)
    elif args.export and args.dashboard_title:
        archimedes.export_dashboard_by_title(args.dashboard_title, args.folder_path, args.one_file, args.force)

    logging.info("Archimedes has finished.")


if __name__ == '__main__':
    try:
        main()
    except KeyboardInterrupt:
        s = "\n\nReceived Ctrl-C or other break signal. Exiting.\n"
        sys.stderr.write(s)
        sys.exit(0)
